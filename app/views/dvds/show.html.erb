<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @dvd.name %>
</p>

<p>
  <b>Release Date:</b>
  <%= @dvd.release_date %>
</p>

<p>
  <b>Summary:</b>
  <%= @dvd.summary %>
</p>

<p>
  <b>Actors:</b>
  <% @actors.each do |a| %>
    <%= link_to a[:name], a %>&nbsp;
  <% end %>
</p>

<p>
  <b>Director:</b>
  <% if @director %>
    <%= link_to @director.name, @director %>
  <% end %>
</p>

<p>
  <% if @dvd.amazon_id.length > 0 %>
    <a href="http://www.amazon.com/gp/product/<%= @dvd.amazon_id %>/">Go to Amazon page</a>
  <% end %>
</p>


<%= link_to 'Edit', edit_dvd_path(@dvd) %> |
<%= link_to 'Back', dvds_path %>
