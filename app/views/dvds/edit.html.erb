<h1>Editing DVD</h1>

<%= form_for(@dvd, :html => { :multipart => true }) do |f| %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <label>Release Date</label><br />
    <%= select_date Date.today, :prefix => :release_date %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </p>
  <p>
    <label>ASIN (Amazon Product ID)</label><br />
    <%= f.text_field :amazon_id %>
  </p>
  <p>  
    <label>Actors</label><br />
    <%= select_tag("actor_ids[]", options_for_select(Actor.find(:all).collect { |act| [act.name, act.id] }, @dvd.actors.collect { |act| act.id}), {:multiple=>true, :size=>6})%>
  </p>
  <p>
    <label>Director</label><br />
    <%= select("dvd", "director_id", @directors.collect {|d| [ d.name, d.id ] }, { :include_blank => true }) %>
  </p>
<!--  <p>Or, <a href="/directors/new" >create a new director</a></p> -->
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>

<%= link_to 'Show', @dvd %> |
<%= link_to 'Back', dvds_path %>
